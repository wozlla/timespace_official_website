<ul>
    <% for(var i = 0, len = news.length; i < len; i++){%>
    <li class="clearfix">
        <h3><%= news[i].title%></h3>
            <span>
                <%= news[i].time %>
            </span>
        <div>
            <a class="update" href="#" onclick="index.showUpdatePage('/admin/news/updatePage','<%= news[i]._id %>')">修改</a>
            <!--<a class="update" href="/admin/news/updatePage?id=<%= news[i]._id %>">修改</a>-->
            <a class="delete" href="#" onclick="index.delete('/admin/news','<%= news[i]._id %>')">删除</a>
        </div>
    </li>
    <% }%>
</ul>

<div class="page">
    <ul class="pagination">
        <li onclick="news.getListByPage(event, 1)"><a href="#">首页</a></li>
        <% for (var i = 1; i <= pageData.pageCount; i ++){%>
        <% if(i === pageData.pageNumber){%>
        <li class="active"><a><%=i%></a></li>
        <%}else{%>
        <li onclick="news.getListByPage(event, <%=i%>)"><a href="#"><%=i%></a></li>
        <% }%>
        <% }%>
        <li onclick="news.getListByPage(event, <%=pageData.pageCount%>)"><a href="#">尾页</a></li>
    </ul>
</div>
