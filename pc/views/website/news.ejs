<% include header.ejs %>

    <link href="/css/website/page.css" type="text/css" rel="stylesheet">
    <link href="/css/website/news/list.css" type="text/css" rel="stylesheet">

<% include logo2.ejs %>

<section class="container">
    <header>

        <% include nav.ejs %>

        <div class="banner">
            <div id="banner-bg" class="bg">
                <img src="/image/news/news.png">
            </div>
        </div>
    </header>

    <section class="content">
        <div class="header clearfix">
            <ul class="clearfix">
                <li class="line"></li>
                <li><h1>消息列表</h1></li>
            </ul>
            <ol class="breadcrumb">
                <li><a href="#">最新消息</a></li>
                <li class="active">消息列表</li>
            </ol>
        </div>

        <div class="body">
            <ul>
                <% for(var i = 0, len = news.length; i < len; i++){%>
                <li class="item" onclick="news.showDetail('/news/detailPage', '<%= news[i]._id %>')">
                    <h3><%= news[i].title%></h3>
                    <p>
                        <%= news[i].body %>
                    </p>
                    <span><%= news[i].time %></span>
                </li>
                <% }%>
            </ul>
        </div>

        <div class="page">
            <ul class="pagination">
                <li><a href="#">首页</a></li>
                <li class="active"><a href="#">1</a></li>
                <li class="disabled"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">尾页</a></li>
            </ul>
        </div>









    <% include shared.ejs %>

    </section>

    <% include right_column.ejs %>

</section>


<% include pop_window.ejs %>


<% include pageFooter.ejs %>


<% include footer.ejs %>
<script src="/js/website/news/news.js"></script>
<script src="/js/website/news/index.js"></script>
